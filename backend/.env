# Server Configuration
NODE_ENV=development
PORT=8000
FRONTEND_URL=http://localhost:3000

# Database
DB_URI=mongodb://localhost:27017/ecommerce

# JWT
JWT_SECRET=your-super-secure-jwt-secret-key-development-only

# Email Configuration (Gmail example)
SMTPHOST=smtp.gmail.com
SMTPPORT=587
SMTPSERVICE=gmail
SMTPMAIL=your-email@gmail.com
SMTPPASSWORD=your-app-password

# Cloud Storage (Optional - you can add these later)
CLOUDINARY_NAME=your-cloudinary-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Payment Gateways (You can add these later)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key

# PayPal (Optional)
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret

# Razorpay (Optional)
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret

# ElasticSearch (Optional - will use MongoDB fallback)
ELASTICSEARCH_URL=http://localhost:9200

# Redis (Optional - will work without it for now)
REDIS_URL=redis://localhost:6379

# Two-Factor Authentication
TWO_FACTOR_SECRET=your-2fa-secret-key

# Security
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits
MAX_FILE_SIZE=10485760
MAX_FILES_PER_REQUEST=10
