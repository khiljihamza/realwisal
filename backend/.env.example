# Server Configuration
NODE_ENV=development
PORT=8000
FRONTEND_URL=http://localhost:3000

# Database
DB_URI=mongodb://localhost:27017/ecommerce
DB_USERNAME=
DB_PASSWORD=

# JWT
JWT_SECRET=your-super-secure-jwt-secret-key-here
JWT_EXPIRES=7d

# Email Configuration
SMTPHOST=smtp.gmail.com
SMTPPORT=587
SMTPSERVICE=gmail
SMTPMAIL=your-email@gmail.com
SMTPPASSWORD=your-app-password

# Cloud Storage
CLOUDINARY_NAME=your-cloudinary-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Payment Gateways
# Stripe
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key

# PayPal
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret

# Razorpay (for Indian market)
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret

# ElasticSearch (Optional)
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=

# Redis (for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Security
API_KEYS=api-key-1,api-key-2,api-key-3
ADMIN_IPS=127.0.0.1,your-office-ip

# Two-Factor Authentication
TWO_FACTOR_SECRET=your-2fa-secret-key

# Push Notifications
FCM_SERVER_KEY=your-firebase-server-key
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key

# Analytics
GOOGLE_ANALYTICS_ID=GA-YOUR-TRACKING-ID

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits
MAX_FILE_SIZE=10485760
MAX_FILES_PER_REQUEST=10

# Logistics Integration
SHIPPING_API_KEY=your-shipping-api-key
TRACKING_API_URL=https://api.shipping-provider.com

# Social Login (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Monitoring
SENTRY_DSN=your-sentry-dsn
NEW_RELIC_LICENSE_KEY=your-newrelic-key
